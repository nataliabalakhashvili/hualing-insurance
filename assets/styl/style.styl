.menu{
	position fixed
	width: 100%;
	height: 100vh;
	left 0
	top 0
	z-index -100
	transition 0.7s
	opacity 0
	&::before{
		width 0
		background white
		content ''
		right 50%
		top 0
		position absolute
		height 100%
		transition 0.6s ease
		+mq(992px){
			right 0
		}
	}
	&::after{
		width 0
		background #f4f6f9
		content ''
		position absolute
		right 0%
		top 0
		height 100%
		transition 0.6s ease
		+mq(992px){
			display none
		}
	}
	&__left-side{
		width 50%
		height 100vh
		position relative
		z-index: 1
		+mq(992px){
			width 100%
		}
		&::before{
			width 300px
			height 100vh
			top 0
			right -300px
			content ""
			position absolute
			background pink
			transition 0.6s
			z-index: 1
		}
	}
	&__left-inside{
		display flex
		align-items: center
		height calc(100vh - 130px)
		>div{
			+mq(992px){
				width 100%
			}
		}
	}
	&__logo{
		display block
		cursor: pointer
		margin: 30px 0 0 60px;
		+mq(768px){
			margin: 30px 0 0 20px;
		}
		img {
			width 140px
		}		
	}
	&__right-side{
		width 50%
		height 100vh
		position relative
		z-index: 1
		&::before{
			width 300px
			height 100vh
			top 0
			right -300px
			content ""
			position absolute
			background pink
			transition 0.6s
			z-index: 1
		}
	}
	&__list{
		padding: 60px;
		+mq(768px){
			padding 30px 20px;
		}
		li{
			font-size: 26px
			padding 1vh 0 1vh 40px
			margin-left: 10px
			position: relative
			cursor: pointer
			+mq(992px){
				font-size 18px
			}
			a{
				color #2062af
				position relative
			}
			span{
				mix-blend-mode: multiply
				transition: 0.3s
				&:last-child{
					position absolute
					left: 0
					top 0
					// color #e91552
					color transparent
				}
			}
			&.active,
			&:hover{
				span{
					&:last-child{
						color #e91552
						top: -8px
					}
				}
			}
		}
	}
	&.active{
		z-index 100
		opacity 1
		&::before{
			width 50%
			+mq(992px){
				width 100%
				right 0
			}
		}
		&::after{
			width 50%
		}
		.menu__left-side,
		.menu__right-side{
			right 0
			&::after{
				width 0
			}
			&::before{
				right 100%
				width 0
			}
		}
	}
	&__dropdown{
		position relative
		&::after{
			position absolute
			content: '';
			width 25px
			height 1px
			transform rotate(90deg) translateY(-60%)
			background: #2264a7
			top 46% 
			left -6px
			transition 0.6s
		}
		&::before{
			position absolute
			content: '';
			width 25px
			height 1px
			transform translateY(-60%)
			background: #e91552
			top 46% 
			left -6px
			transition 0.6s
		}
		&:hover{
			&:before{
				transform rotate(180deg) translateY(-60%)
			}
			&:after{
				transform rotate(0) translateY(-60%)
			}
		}
		&.active{
			&:before{
				transform rotate(225deg) translateY(-60%)
			}
			&:after{
				transform rotate(-45deg) translateY(-60%)
			}
		}
	}
	&__become-agent{
		background: transparent	
		border none 
		color white
		font-size: 24px
		margin 0 0 0 110px
		padding 12px 40px 7px
		position relative	
		+mq(768px){
			margin 0 0 0 20px
			font-size 18px
		}
		span{
			position relative
			z-index: 1
		}
		&::after{
      position absolute
      content ""
      width 100%
      height 100%
      top 0
      mix-blend-mode: multiply;
      background: transparent
      left 0
      transition: 0.3s
		}
    &::before{
      position absolute
      content ""
      width 100%
      height 100%
      top 0
      background: #e91552
      transition: 0.3s
      left 0px
      mix-blend-mode: multiply;
		}
		&:hover{
			&::before{
				background: #2062af
				top 2px
				left -2px
			}
			&::after{
				mix-blend-mode: multiply;
				background: #e91552
				top -2px
				left 2px
			}
		}

	}
	&__footer{
		position absolute
		bottom 30px
		left 70px
		+mq(768px){
			bottom 10px
			left 20px
		}
		&__social{
			margin 0 5px
			filter grayscale(100%)
			opacity: 0.7
			transition: 0.2s
			&:hover{
				opacity: 1
				filter grayscale(0%)
			}
			img{
